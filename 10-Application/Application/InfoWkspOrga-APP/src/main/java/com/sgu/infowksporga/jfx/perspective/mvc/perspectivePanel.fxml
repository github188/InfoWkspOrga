<ScrollPane fitToHeight="true" fitToWidth="true" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sgu.infowksporga.jfx.perspective.mvc.PerspectivePanelViewFxml">
   <content>
      <GGridPane fx:id="grdPnlPerspective" hgap="3.0" prefWidth="374.0" vgap="3.0">
         <columnConstraints>
            <ColumnConstraints halignment="RIGHT" hgrow="NEVER" maxWidth="50.0" minWidth="50.0" prefWidth="50.0" />
            <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" maxWidth="1.7976931348623157E308" minWidth="160.0" prefWidth="160.0" />
            <ColumnConstraints hgrow="ALWAYS" maxWidth="155.0" minWidth="155.0" prefWidth="155.0" />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints maxHeight="30.0" minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="30.0" minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="30.0" minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints vgrow="ALWAYS" />
         </rowConstraints>
         <children>
            <GLabel fx:id="lblFilter" maxWidth="45.0" minWidth="45.0" prefHeight="20.0" prefWidth="45.0" text="  Filter :" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
            <GComboBox fx:id="cbbFilterOnWorkspaces" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" promptText="Workspaces" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" />
            <GHBox fillHeight="false" spacing="10.0" GridPane.columnSpan="3" GridPane.rowIndex="2">
               <children>
                  <GButton fx:id="btnCollapseWorkspaceTree" mnemonicParsing="false" text="btnCollapseAll" />
                  <GButton fx:id="btnExpandWorkspaceTree" mnemonicParsing="false" text="btnExpandAll" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </GHBox>
            <GAnchorPane GridPane.columnSpan="3" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3" GridPane.vgrow="ALWAYS">
               <children>
                  <GScrollPane fitToHeight="true" fitToWidth="true" prefHeight="440.0" prefWidth="371.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <content>
                        <GTreeView fx:id="treeWorkspaces" />
                     </content>
                  </GScrollPane>
               </children>
            </GAnchorPane>
            <GLabel fx:id="lblSelect" maxWidth="45.0" minWidth="45.0" prefHeight="20.0" prefWidth="45.0" text="Select :" GridPane.halignment="RIGHT">
               <padding>
                  <Insets left="3.0" />
               </padding>
            </GLabel>
            <GComboBox fx:id="cbbPerspective" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" promptText="Perspective" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.valignment="CENTER" />
            <GButton fx:id="btnRefreshPerspective" mnemonicParsing="false" text="Refresh" GridPane.columnIndex="2" GridPane.halignment="LEFT" />
            <GHBox alignment="CENTER_LEFT" fillHeight="false" minWidth="99.0" prefHeight="33.0" prefWidth="99.0" spacing="10.0" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
               <children>
                  <GButton fx:id="btnClearWorkspaceFilter" mnemonicParsing="false" text="clear" />
                  <GCheckBox fx:id="chkbWorkspaceFilterOnlyOnLeaf" alignment="CENTER" mnemonicParsing="false" text="Sur les feuilles" />
               </children>
            </GHBox>
         </children>
      </GGridPane>
   </content>
